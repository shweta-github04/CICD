{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },

  "builders": [
    {
      "type": "docker",
      "image": "solr",
      "commit": "true"	    
     }
   ],
   

   "post-processors": [
      [
	{
	  "type": "docker-tag",
	  "repository": "189895028386.dkr.ecr.us-east-1.amazonaws.com/solr",		
	  "tag": "latest"
	},	      
       {
        "type": "docker-push",
	"ecr_login": true,
	"aws_access_key": "{{user `access_key`}}",
	"aws_secret_key": "{{user `secret_key`}}",  
        "login_server": "https://189895028386.dkr.ecr.us-east-1.amazonaws.com/solr"
      }   
    ]
  ]
}

